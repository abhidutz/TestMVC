                            @Html.TextBoxFor(model => model.emailID, new { @Value = @ViewBag.emailId})
                          
                            <input type="submit" value="Post" class="btn btn-success" />
                            @*<button class="btn btn-success"><i class="fa fa-plus"></i></button>*@

                        </div>
                    </div>
                </div>
            }






